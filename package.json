    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "pivot:insert": "node test/test-dynamic-pivot.js",
    "verify": "node test/verify-xml-xlsx-lite.js",
    "test:all": "npm run build && npm run verify"
